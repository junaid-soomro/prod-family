<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="81dp"
    android:padding="10dp">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/order_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">
        <TextView
            android:textColor="@color/fbutton_color_pomegranate"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Product Name: "
             />
            <TextView
                android:textColor="@color/fbutton_color_midnight_blue"
                android:textSize="11dp"
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OrderName"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/fbutton_color_pomegranate"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Username:" />

            <TextView
                android:id="@+id/user_name_order"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView

            android:textColor="@color/fbutton_color_pomegranate"
            android:textSize="11dp"
            android:textStyle="bold"

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Payment Type:" />

            <TextView
                android:id="@+id/payment_type"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment_type" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView

            android:textColor="@color/fbutton_color_pomegranate"
            android:textSize="11dp"
            android:textStyle="bold"

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Order Status:" />

            <TextView
                android:id="@+id/order_status"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="order_status" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView

            android:textColor="@color/fbutton_color_pomegranate"
            android:textSize="12dp"
            android:textStyle="bold"

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Price:" />

            <TextView
                android:id="@+id/order_price"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />


        </LinearLayout>

    </LinearLayout>






</LinearLayout>