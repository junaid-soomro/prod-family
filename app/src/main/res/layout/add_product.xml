<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/prod_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/no_iamge" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/prod_name"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:hint="Product Name"
       >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/prod_rate"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:hint="Price"
      >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal" />
    </android.support.design.widget.TextInputLayout>



    <TextView
        android:padding="5dp"
        android:textColor="@color/fbutton_color_pomegranate"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category" />

    <Spinner

        android:gravity="center_vertical"
        android:background="@color/fbutton_color_clouds"
        android:id="@+id/drop_down_categories"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:spinnerMode="dialog"
       />

    <Button

        android:id="@+id/add_prod"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:background="@color/fbutton_color_pomegranate"
        android:text="Add Product" />
</LinearLayout>