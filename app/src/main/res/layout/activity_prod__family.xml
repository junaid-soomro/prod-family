<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.dark.prod_family_project.Activities.Prod_Family">



    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Welcome: "
        android:textSize="40dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="96dp"
        android:layout_marginStart="48dp"
        android:text="Uzair"
        android:textColor="@color/fbutton_color_pomegranate"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_products"
        app:layout_constraintStart_toEndOf="@+id/textView8" />

    <Button
        android:background="@color/fbutton_color_alizarin"
        android:id="@+id/add_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="88dp"
        android:text="Add Product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:background="@color/fbutton_color_green_sea"
        android:id="@+id/my_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="My Products"
        app:layout_constraintStart_toStartOf="@+id/add_products"
        app:layout_constraintTop_toBottomOf="@+id/add_products" />

    <Button
        android:background="@color/fbutton_color_emerald"
        android:id="@+id/Orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Orders"
        app:layout_constraintEnd_toEndOf="@+id/my_products"
        app:layout_constraintStart_toStartOf="@+id/my_products"
        app:layout_constraintTop_toBottomOf="@+id/my_products" />

    <ImageView
        android:id="@+id/SETTINGS"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Orders"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/settings" />

    <ImageView
        android:id="@+id/logout_seller"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Orders"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logout" />" />


</android.support.constraint.ConstraintLayout>
